                    <td>{{Etu.nom}}</td>
                    <td>{{Etu.matricule}}</td>
                    <td>{{Etu.bourse}}</td>
                    <td>{{Etu.chambre.getNumChambre()}}</td>
                    <td>{{Etu.adresse}}</td>
                    <td>{{Etu.tel}}</td>
                    <td>{{Etu.email}}</td>
                    <td>03/03/1950</td>
